<Window x:Class="Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="700" 
        Width="410"
        >
    
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="25.96"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <TextBlock Text="Username:" VerticalAlignment="Center"/>
                <TextBox x:Name="UsernameTextBox" Width="100" Margin="87 0 0 0" />
                <TextBlock Text="Connected:" VerticalAlignment="Center" Margin="60 0 0 0"/>
                <TextBlock x:Name="UserCountTextBlock" VerticalAlignment="Center" Margin="6 0" Text="0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Button x:Name="ConnectBtn" Width="80" Height="30" Content="Connect" Margin="0 5" Click="ConnectBtn_Click"/>
                <Button x:Name="DisconnectBtn" Width="80" Height="30" Content="Disconnect" Margin="215 0" Click="DisconnectBtn_Click" IsEnabled="False"/>
            </StackPanel>
        </Grid>


        <ListView x:Name="MessagesListView" 
          Grid.Row="1" 
          ItemsSource="{Binding Messages}" 
          Margin="0,7,0,0"
          Background="LightCoral">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ItIsYou}" Value="True">
                            <Setter Property="HorizontalContentAlignment" Value="Right" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="6" CornerRadius="8">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#EEE"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ItIsYou}" Value="True">
                                        <Setter Property="Background" Value="#D0E9FF"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{Binding Username}"/>
                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap" Foreground="Black"/>
                            <TextBlock FontStyle="Italic" FontSize="10" Text="{Binding TimestampLocal}" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Border CornerRadius="10" BorderThickness="1" BorderBrush="Black" Background="White" Grid.Row="2" Margin="0,8,0,0" Height="100" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="MessageTextBox" 
                    Padding="0 10 0 10" 
                    Width="280" Height="100" 
                    VerticalAlignment="Center"
                    Background="Transparent" BorderThickness="0" KeyDown="MessageTextBox_KeyDown" />
                
                <Button x:Name="SendBtn" 
                        Content="Send" 
                        Margin="0 0 10 0" 
                        Width="85" 
                        IsEnabled="False" 
                        Click="SendBtn_Click"
                        BorderThickness="0" Background="Transparent"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
